<Page x:Class="AcademyofITSpecialists.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AcademyofITSpecialists.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Foreground="White"
      Title="Главная">
      
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Name="MainTbl" Text="Главная" FontWeight="SemiBold" FontSize="35" HorizontalAlignment="Center"/>
        <TextBlock Text="Добро пожаловать в официальное приложение" Grid.Row="1" TextWrapping="Wrap" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <TextBlock Text="Академии IT-Специалистов" Grid.Row="2" TextWrapping="Wrap" Foreground="#8581FF" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Page>
